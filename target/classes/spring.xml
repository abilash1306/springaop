<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xsi:schemaLocation="
	   http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

   <aop:aspectj-autoproxy />

   <bean name = "triangle" class = 'com.virtusa.model.Triangle'>
     <property name = "name" value = "Triangle" />
   </bean>
   
   <bean name = "circle" class = 'com.virtusa.model.Circle'>
     <property name = "name" value = "Circle" />
   </bean>
   
   <bean name = "shapeService" class = "com.virtusa.service.ShapeService" autowire = "byName" />
   
   <bean name = "loggingAspect" class = "com.virtusa.aop.LoggingAspect" />

</beans>
